{
  "name": "dare",
  "version": "0.45.1",
  "description": "Database to REST, REST to Database",
  "main": "src/index.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "npm run spec && ((nyc report --reporter=text-lcov | coveralls) || exit 0)",
    "test:ci": "eslint ./ && nyc mocha test/specs/**/*.js --reporter mocha-circleci-reporter && (nyc report --reporter=text-lcov | coveralls)",
    "spec": "nyc mocha test/specs/**/*.js",
    "semantic-release": "semantic-release",
    "lint": "eslint ./",
    "lint-fix": "eslint --fix ./",
    "lint-diff": "LIST=`git diff-index --name-only HEAD | grep '.*\\.js$';`; if [ \"$LIST\" ]; then eslint $LIST; fi",
    "lint-diff-fix": "LIST=`git diff-index --name-only HEAD | grep '.*\\.js$';`; if [ \"$LIST\" ]; then eslint --fix $LIST; fi",
    "precommit-msg": "echo 'Running pre-commit checks... (skip using --no-verify)' && exit 0"
  },
  "pre-commit": [
    "precommit-msg",
    "lint-diff",
    "spec"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/5app/dare.git"
  },
  "keywords": [
    "Database",
    "MySQL",
    "REST"
  ],
  "author": "Andrew Dodson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/5app/dare/issues"
  },
  "homepage": "https://github.com/5app/dare#readme",
  "files": [
    "src/"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.2.0",
    "eslint-config-5app": "^0.12.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^4.2.5",
    "mocha": "^8.0.0",
    "mocha-circleci-reporter": "0.0.3",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "semantic-release": "^17.0.8"
  },
  "dependencies": {
    "tricks": "^1.12.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E  HUSKY_GIT_PARAMS && npm run lint-diff"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": ["main"],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
