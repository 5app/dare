{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"extends": "eslint:recommended",
	"rules": {
		"no-console-log": 0,
		"no-console": 0,
		"no-empty": 2,
		"no-extra-semi": 2,
		"no-fallthrough": 2,
		"no-mixed-spaces-and-tabs": 2,
		"no-redeclare": 2,
		"no-self-assign": 2,
		"no-spaced-func": 2,
		"no-trailing-spaces": 2,
		"no-undef": 2,
		"no-unreachable": 2,
		"no-unused-vars": 2,
		"array-bracket-spacing": [2, "never"],
		"comma-dangle": 0,
		"comma-spacing": [2, { "before": false, "after": true }],
		"indent": [2, "tab", {"SwitchCase": 1}],
		"keyword-spacing": [2, { "before": true }],
		"linebreak-style": [2, "unix"],
		"one-var": [2, "never"],
		"quotes": [2, "single"],
		"semi": [2, "always"],
		"space-before-blocks": 2,
		"space-infix-ops": [2, {"int32Hint": false}],
		"space-in-parens": [2, "never"]
	}
}
