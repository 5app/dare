{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"extends": "eslint:recommended",
	"rules": {
		"no-console-log": 0,
		"no-console": 0,
		"no-empty": 2,
		"no-extra-semi": 2,
		"no-fallthrough": 2,
		"no-mixed-spaces-and-tabs": 2,
		"no-redeclare": 2,
		"no-self-assign": 2,
		"no-undef": 2,
		"no-unreachable": 2,
		"no-unused-vars": 2,
		"comma-dangle": 0,
		"indent": [2, "tab", {"SwitchCase": 1}],
		"linebreak-style": [2, "unix"],
		"one-var": [2, "never"],
		"quotes": [0, "single"],
		"semi": [2, "always"]
	}
}
